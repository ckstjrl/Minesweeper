<UserControl x:Class="MinesweeperProject.View.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="420" Background="White">
    <StackPanel Margin="20">

        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Command="{Binding ReturnToMenuCommand}"
                    Content="←"
                    FontSize="24"
                    FontWeight="ExtraBold"
                    Background="Transparent" 
                    BorderThickness="0"
                    Padding="0"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="0"/>
                    </Style>
                </Button.Resources>
            </Button>

            <TextBlock Grid.Column="1"
                       Text="환경 설정"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="-30,0,0,0"/>
        </Grid>
        <DockPanel Margin="0,5">
            <TextBlock Text="마스터 사운드" VerticalAlignment="Center"/>
            <ToggleButton IsChecked="{Binding IsMasterSoundOn}" 
                          HorizontalAlignment="Right" 
                          Width="60">
                <ToggleButton.Style>
                    <Style TargetType="ToggleButton">
                        <Setter Property="Content" Value="OFF"/>
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Content" Value="ON"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
        </DockPanel>

        <Separator Margin="0,15"/>

        <TextBlock Text="배경음악 선택" Margin="0,5"/>
        <ComboBox ItemsSource="{Binding BgmList}" 
                  SelectedItem="{Binding SelectedBgm}"
                  DisplayMemberPath="Title"/>

        <Separator Margin="0,15"/>

        <CheckBox Content="효과음 사용" IsChecked="{Binding IsSfxEnabled}" Margin="0,5"/>

        <Separator Margin="0,15"/>

        <TextBlock Text="배경음악 볼륨" Margin="0,5"/>
        <Slider Minimum="0" Maximum="100" Value="{Binding BgmVolume}" SmallChange="1"/>

        <TextBlock Text="효과음 볼륨" Margin="10,10,0,5"/>
        <Slider Minimum="0" Maximum="100" Value="{Binding SfxVolume}" SmallChange="1"/>

    </StackPanel>
</UserControl>