<UserControl x:Class="MinesweeperProject.View.WaitRoomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <UserControl.Resources>
        <Style x:Key="LIGButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#002C77"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="18">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="buttonScale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EBF2FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#002C77"/>
                                <Setter Property="Foreground" Value="#002C77"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(RenderTransform).ScaleX" To="0.97" Duration="0:0:0.05"/>
                                            <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(RenderTransform).ScaleY" To="0.97" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(RenderTransform).ScaleX" To="1" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(RenderTransform).ScaleY" To="1" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LIGExitButtonStyle" TargetType="Button" BasedOn="{StaticResource LIGButtonStyle}">
            <Setter Property="Background" Value="#FEEBEE"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="BorderBrush" Value="#FFCDD2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFCDD2"/>
                    <Setter Property="BorderBrush" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LIGListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#FDFDFD"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border CornerRadius="12" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Margin="2">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="itemBorder" CornerRadius="8" Background="Transparent">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="itemBorder" Property="Background" Value="#EBF2FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Margin="30,25,0,20">
            <TextBlock Text="LIGNex1" Foreground="#002C77" FontWeight="Bold" FontSize="13" Margin="0,0,0,2"/>
            <TextBlock Text="대기실" Foreground="#1A1A1A" FontWeight="ExtraBold" FontSize="34"/>
        </StackPanel>

        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">

                <Border Background="#F8F9FA" CornerRadius="15" Padding="12" Margin="0,0,0,20" HorizontalAlignment="Left" BorderBrush="#EEEEEE" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⏳" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="플레이어 대기 중..." FontSize="14" FontWeight="Bold" Foreground="#333333" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="접속한 플레이어" FontSize="14" FontWeight="Bold" Foreground="#888888" Margin="8,0,0,8"/>
                    <ListBox Style="{StaticResource LIGListBoxStyle}"
                             ItemsSource="{Binding Players}"
                             Height="180"
                             Padding="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👤" Foreground="#002C77" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}" FontSize="15" FontWeight="Medium" Foreground="#333"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <Button Content="게임 시작!" 
                        Command="{Binding StartGameCommand}" 
                        IsEnabled="{Binding CanStartGame}"
                        Style="{StaticResource LIGButtonStyle}" 
                        Height="55" Margin="0,5" />

                <Button Content="나가기" 
                        Command="{Binding CloseCommand}" 
                        Style="{StaticResource LIGExitButtonStyle}" 
                        Height="55" Margin="0,15"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>